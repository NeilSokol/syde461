<Window x:Class="syde462WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login screen" Height="350" Width="525">
    <Grid Background="{x:Null}">
        <Button Content="Login" Height="42" HorizontalAlignment="Left" Margin="148,164,0,0" Name="button1" VerticalAlignment="Top" Width="227" />
        <Button Content="Create new user" Height="42" HorizontalAlignment="Left" Margin="148,0,0,31" Name="button2" VerticalAlignment="Bottom" Width="227" ContentStringFormat="Create new user" Click="button2_Click" />
        <Label Content="Are you new to the system?" Height="28" HorizontalAlignment="Left" Margin="148,212,0,0" Name="label1" VerticalAlignment="Top" Width="165" />
        <TextBox Height="36" HorizontalAlignment="Left" Margin="148,39,0,0" Name="textBox1" VerticalAlignment="Top" Width="227" />
        <TextBox Height="36" HorizontalAlignment="Left" Margin="148,112,0,0" Name="textBox2" VerticalAlignment="Top" Width="226" />
        <Label Content="User name" Height="26" HorizontalAlignment="Left" Margin="148,12,0,0" Name="label2" VerticalAlignment="Top" Width="226" />
        <Label Content="Password" Height="26" HorizontalAlignment="Left" Margin="148,81,0,0" Name="label3" VerticalAlignment="Top" Width="226" />
    </Grid>
</Window>
